{
  "name": "BuildersRecords API",
  "description": "Backend API for BuildersRecords clients.",
  "keywords": ["python", "flask", "buildersrecords"],
  "website": "http://api.buildersrecords.com",
  "repository": "https://github.com/maangulo12/buildersrecords-api",
  "success_url": "/",
  "scripts": {
    "postdeploy": "python3 manage.py recreate"
  },
  "env": {
    "DATABASE_URL": {
      "required": true
    },
    "DEBUG": {
      "required": true
    },
    "MAIL_PASSWORD": {
      "required": true
    },
    "MAIL_PORT": {
      "required": true
    },
    "MAIL_SERVER": {
      "required": true
    },
    "MAIL_USE_SSL": {
      "required": true
    },
    "MAIL_USERNAME": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    },
    "TESTING": {
      "required": true
    }
  },
  "image": "heroku/python",
  "addons": [
    "heroku-postgresql:hobby-dev",
    "deployhooks:email"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
